ENV TINI_VERS=0.18.0
ENV TINI_SHA5=fc8c522484613c57ed6532924f399d7b10851cf019bc687febe3ba7a77911ed2bc3aaf708a3b074a7a339bca00bccbcd99d72d15b5c3229a48cf4683c9501bc9
